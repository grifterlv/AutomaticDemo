<UserControl x:Class="AutomaticDemo.Controls.RadarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomaticDemo.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="LayoutRoot">
        <Canvas Name="mainCanvas"/>
        <Canvas Name="sectionCanvas">
            <Polygon Name="p1" Stroke="#22FFFFFF" StrokeThickness="1"/>
            <Polygon Name="p2" Stroke="#22FFFFFF" StrokeThickness="1"/>
            <Polygon Name="p3" Stroke="#22FFFFFF" StrokeThickness="1"/>
            <Polygon Name="p4" Stroke="#22FFFFFF" StrokeThickness="1"/>
            <Polygon Name="p5" Stroke="Orange" StrokeThickness="1" Fill="#550091F0"/>
        </Canvas>
    </Grid>
</UserControl>
